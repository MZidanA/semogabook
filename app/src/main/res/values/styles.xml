<resources>
    <style name="RatingBarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item> <item name="colorControlActivated">@color/colorPrimaryGreen</item> </style>

    <style name="BookInfoLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="BookInfoValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>
</resources>